@model IEnumerable<EmployeeLeave>

<div class="card card-dark bg-dark border-black" data-bs-theme="dark">
	<div class="display-6 text-light">@Localizer["EmployeeLeaves"]</div>
	<div class="d-flex justify-content-end">
		<a asp-action="Create" class="btn btn-success">
			<i class="bi bi-plus-lg"></i>
			@Localizer["Create"]
		</a>
	</div>
	<div class="card-body text-light table-responsive">
		<table id="employeeLeavesTable" class="table table-dark table-hover table-striped align-middle">
			<thead>
				<tr>
					<th class="text-center">@Localizer["Id"]</th>
					<th>@Localizer["Employee"]</th>
					<th>@Localizer["StartDateTime"]</th>
					<th>@Localizer["EndDateTime"]</th>
					<th>@Localizer["Reason"]</th>
					<th>@Localizer["Operations"]</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var employeeLeave in Model)
				{
					<tr>
						<td class="text-center">@employeeLeave.EmployeeLeaveId</td>
						<td>@employeeLeave.Employee.EmployeeName</td>
						<td>@employeeLeave.LeaveStartDateTime</td>
						<td>@employeeLeave.LeaveEndDateTime</td>
						<td>@employeeLeave.Reason</td>
						<td>
							<div class="d-flex justify-content-center">
								<a asp-action="Update" asp-route-id="@employeeLeave.EmployeeLeaveId" class="btn btn-warning">
									<i class="bi bi-pencil"></i>
									@Localizer["Update"]
								</a>
								<form asp-action="Delete" asp-route-id="@employeeLeave.EmployeeLeaveId" class="btn btn-danger">
									<i class="bi bi-trash"></i>
									@Localizer["Delete"]
								</form>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>