@model BranchDtoForInsert
<div class="card card-dark bg-dark border-black">
	<div class="card-header">
		<h6 class="card-title">@Localizer["CreateBranch"]</h6>
	</div>
	<div class="card-body text-light">
		<form method="post" asp-action="Create">
			<div class="form-group">
				<label asp-for="BranchName">@Localizer["Name"]</label>
				<input asp-for="BranchName" class="form-control" />
				<span asp-validation-for="BranchName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Country">@Localizer["Country"]</label>
				<input asp-for="Country" class="form-control" />
				<span asp-validation-for="Country" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="City">@Localizer["City"]</label>
				<input asp-for="City" class="form-control" />
				<span asp-validation-for="City" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="District">@Localizer["District"]</label>
				<input asp-for="District" class="form-control" />
				<span asp-validation-for="District" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="District">@Localizer["District"]</label>
				<input asp-for="District" class="form-control" />
				<span asp-validation-for="District" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Street">@Localizer["Street"]</label>
				<input asp-for="Street" class="form-control" />
				<span asp-validation-for="Street" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address">@Localizer["Address"]</label>
				<input asp-for="Address" class="form-control" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BranchPhoneNumber">@Localizer["PhoneNumber"]</label>
				<input asp-for="BranchPhoneNumber" class="form-control" type="tel"/>
				<span asp-validation-for="BranchPhoneNumber" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BranchEmail">@Localizer["Email"]</label>
				<input asp-for="BranchEmail" class="form-control" type="email"/>
				<span asp-validation-for="BranchEmail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ReservationInAdvanceDayLimit">@Localizer["ReservationInAdvanceDayLimit"]</label>
				<input asp-for="ReservationInAdvanceDayLimit" class="form-control" type="number"/>
				<span asp-validation-for="ReservationInAdvanceDayLimit" class="text-danger"></span>
			</div>
			<div class="form-group form-check form-switch mb-3 d-flex align-items-center border-bottom" style="max-width: 576px; padding-left: 0">
				<label asp-for="Status" class="form-check-label me-auto">@Localizer["Status"]</label>
				<input asp-for="Status" class="form-check-input mb-1" type="checkbox" role="switch" />
				<span asp-validation-for="Status" class="text-danger ms-2"></span>
			</div>
			<div class="text-danger" asp-validation-summary="All"></div>
			<button type="submit" class="btn btn-primary my-3">
				<i class="bi bi-floppy"></i>
				@Localizer["Create"]
			</button>
		</form>
	</div>
</div>