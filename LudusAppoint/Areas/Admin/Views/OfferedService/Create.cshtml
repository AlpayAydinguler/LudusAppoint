@model OfferedServiceDtoForInsert

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card card-dark bg-dark border-black">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["CreateOfferedService"]</h5>
                </div>
                <div class="card-body text-light">
                    <form method="post" asp-action="Create">
                        <div class="row g-3">
                            <!-- Left Column -->
                            <div class="col-12 col-lg-6">
                                <div class="border border-primary-subtle rounded-3 p-3 mb-3">
                                    <h5 class="mb-3"><i class="bi bi-info-circle me-2"></i>@Localizer["Information"]</h5>
                                    <div class="form-floating text-body-tertiary mb-3">
                                        <input asp-for="OfferedServiceName" class="form-control" placeholder=" " />
                                        <label asp-for="OfferedServiceName">@Localizer["Name"]</label>
                                        <span asp-validation-for="OfferedServiceName" class="text-danger small"></span>
                                    </div>

                                    <div class="form-floating text-body-tertiary mb-3">
                                        <input asp-for="ApproximateDuration" class="form-control"
                                               type="time" min="00:01" max="24:00" placeholder=" " />
                                        <label asp-for="ApproximateDuration">@Localizer["ApproximateDuration(Minutes)"]</label>
                                        <span asp-validation-for="ApproximateDuration" class="text-danger small"></span>
                                    </div>

                                    <div class="form-floating text-body-tertiary mb-3">
                                        <input asp-for="Price" class="form-control"
                                               type="number" step="0.01" placeholder=" " />
                                        <label asp-for="Price">@Localizer["Price"]</label>
                                        <span asp-validation-for="Price" class="text-danger small"></span>
                                    </div>

                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch"
                                               id="statusSwitch" asp-for="Status">
                                        <label class="form-check-label" for="statusSwitch">@Localizer["IsActive"]</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-12 col-lg-6">
                                <div class="border border-primary-subtle rounded-3 p-3 mb-3">
                                    <h5 class="mb-3"><i class="bi bi-translate me-2"></i>@Localizer["Translations"]</h5>
                                    @{
                                        var supportedCultures = ViewBag.SupportedCultures as List<string>;
                                    }
                                    @foreach (var culture in supportedCultures)
                                    {
                                        <div class="form-floating text-body-tertiary mb-3">
                                            <input class="form-control" type="text"
                                                   name="Translations[@culture]"
                                                   id="Translation-@culture"
                                                   value="@(Model.Translations?.ContainsKey(culture) == true ? Model.Translations[culture] : "")"
                                                   placeholder=" " />
                                            <label for="Translation-@culture">@Localizer["NameForCulture"] (@culture)</label>
                                        </div>
                                    }
                                </div>

                                <div class="row g-3">
                                    <!-- Genders Section -->
                                    <div class="col-12 col-md-6">
                                        <div class="border border-primary-subtle rounded-3 p-3">
                                            <h6 class="mb-3"><i class="bi bi-gender-ambiguous me-2"></i>@Localizer["Genders"]</h6>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                       name="Genders" value="Male"
                                                       id="genderMale"
                                                       checked="@Model.Genders.Contains(Gender.Male)" />
                                                <label class="form-check-label" for="genderMale">
                                                    <i class="bi bi-gender-male"></i> @Localizer["Male"]
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                       name="Genders" value="Female"
                                                       id="genderFemale"
                                                       checked="@Model.Genders.Contains(Gender.Female)" />
                                                <label class="form-check-label" for="genderFemale">
                                                    <i class="bi bi-gender-female"></i> @Localizer["Female"]
                                                </label>
                                            </div>
                                            <span asp-validation-for="Genders" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- Age Groups Section -->
                                    <div class="col-12 col-md-6">
                                        <div class="border border-primary-subtle rounded-3 p-3">
                                            <h6 class="mb-3"><i class="bi bi-people me-2"></i>@Localizer["AgeGroups"]</h6>
                                            @{
                                                var allAgeGroups = ViewBag.AllAgeGroups as List<AgeGroupDto>;
                                            }
                                            @foreach (var ageGroup in allAgeGroups)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="AgeGroupIds"
                                                           value="@ageGroup.AgeGroupId"
                                                           id="ageGroup-@ageGroup.AgeGroupId"
                                                           checked="@Model.AgeGroupIds.Contains(ageGroup.AgeGroupId)" />
                                                    <label class="form-check-label">
                                                        @ageGroup.Name
                                                    </label>
                                                </div>
                                            }
                                            <span asp-validation-for="AgeGroups" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Validation and Submit -->
                        <div class="mt-4">
                            <div class="text-danger small" asp-validation-summary="All"></div>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary px-4 py-2">
                                    <i class="bi bi-floppy me-2"></i>
                                    @Localizer["CreateService"]
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>